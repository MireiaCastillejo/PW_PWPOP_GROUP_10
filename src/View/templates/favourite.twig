{% extends "baseLogged.twig" %}


{% block styles %}
    {{ parent() }}


{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.4.0.js" integrity="sha256-DYZMCC8HTC+QDr5QNaIcfR7VSPtcISykd+6eSmBW5qo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.1/jquery.validate.min.js"></script>
    <script src="http://jqueryvalidation.org/files/dist/additional-methods.min.js"></script>

{% endblock %}


{% block title %}
    Upload product
{% endblock %}

{% block navbar %}{% endblock %}

{% block buttons %}

    <div class="col-md-1 text-right">
        <a onclick="location.href = '/profile'">
            <img src="{{ base_url() }}/uploads/defaultProfile.png" id="profileImageLink">
        </a>
    </div>
    {{ parent() }}

{% endblock %}

{% block header %}
    <h1>PWPOP</h1>
{% endblock %}


{% block content %}
    <h1 class="form_title">Favourite items</h1>

    <div class="album py-6 bg-light">
        <div class="container">
            <div class="row">
                {% for product in products %}
                    {% if product.isActive==1 %}
                    {% if product.isFav==1 %}
                    <div class="col-md-4">

                        <div class="card mb-4 shadow-sm">
                            {% set foo =product.product_image|split('/') %}
                            <img src="/uploads/products/{{ foo[0] }}" id="fotoprod" >


                            <div class="card-body">

                                <h5 id="title" class="title">{{ product.title }} </h5>

                                <p class="descripton">{{ product.description }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="price">{{ product.price }}â‚¬</small>



                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                {% endif %}
                {% endfor %}


            </div>
        </div>
    </div>

{% endblock %}

{% block footer %}
{% endblock %}