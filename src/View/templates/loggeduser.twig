{% extends "baseLogged.twig" %}
{% block styles %}
    {{ parent() }}
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="{{ base_url() }}/assets/js/homepage.js"></script>


{% endblock %}

{% block title %}
    PWPOP
{% endblock %}

        {% block navbar %}
        {% endblock %}

{% block buttons %}

    <div class="col-md-1 text-right">
        <a onclick="location.href = '/profile'">
            <img src="{{ base_url() }}/uploads/defaultProfile.png" id="profileImageLink">
        </a>
    </div>

    {{ parent() }}

{% endblock %}

{% block modal %}
    <!-- Modal -->
    <div class="modal fade" id="searchModal" role="dialog" tabindex="-5" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel">Search your product</h5>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="TitleInput">Title</label>
                            <input type="text" class="form-control" id="TitleInput" placeholder="Title">
                        </div>

                        <div class="form-group">
                            <label for="TitleInput">Select your product:</label>
                            <div class="dropdown">
                                <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Products
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Tecnolog√≠a</a>
                                    <a class="dropdown-item" href="#">Ropa</a>
                                    <a class="dropdown-item" href="#">Juguetes</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Min">Min</label>
                                <input type="number" class="form-control" min="0.00" max="10000.00" step="0.01"
                                       placeholder="MIN"/>
                            </div>
                            <div class="form-group">
                                <label for="Max">Max</label>
                                <input type="number" class="form-control" min="0.00" max="10000.00" step="0.01"
                                       placeholder="MAX"/>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>

                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>




{% endblock %}

{% block header %}
    <h1>PWPOP</h1>
{% endblock %}


{% block content %}


    <div class="album py-6 bg-light">
        <div class="container">
            <div class="row">
                {% for product in products %}
                    {% if product.isActive==1 %}
                {% if product.id<=7 %}

                <div class="col-md-4">

                    <div class="card mb-4 shadow-sm moreBox">


                             <img src="/uploads/{{ product.product_image }}" id="fotoprod" >

                        <div class="card-body">

                                <h5 id="title" class="title">{{ product.title }} </h5>

                                <p class="descripton">{{ product.description }}</p>
                                <div class="d-flex justify-content-between align-items-center">

                                <small class="price">{{ product.price }}‚Ç¨</small>
                                    <button type="button" data-toggle="modal" data-target="#exampleModal"
                                            class="btn btn-success">Buy
                                    </button>

                                    {% if product.isFav==1 %}
                                    <button type="submit" id={{ product.id }}  onclick="like({{ product.id }})"> ‚ù§</button>
                                    {% else%}

                                    <button type="submit" id={{ product.id }}  onclick="like({{ product.id }})"> üíô</button>
                                        {% endif%}



                                </div>
                        </div>
                    </div>
                </div>
                {% endif %}

                    {% if product.id>=7 %}
                        <div class="col-md-4">

                            <div class="card mb-4 shadow-sm moreBox" style="display: none;">

                                <img src="/uploads/{{ product.product_image }}" id="fotoprod" >

                                <div class="card-body">

                                    <h5 id="title" class="title">{{ product.title }} </h5>

                                    <p class="descripton">{{ product.description }}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="price" type="number">{{ product.price }}‚Ç¨</small>
                                        <button type="button" data-toggle="modal" data-target="#exampleModal"
                                                class="btn btn-success">Buy
                                        </button>

                                        {% if product.isFav==1 %}
                                            <button type="submit" id={{ product.id }}  onclick="like({{ product.id }})"> ‚ù§</button>
                                        {% else%}

                                            <button type="submit" id={{ product.id }}  onclick="like({{ product.id }})"> üíô</button>
                                        {% endif%}



                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endif %}
                {% endfor %}


            </div>
        </div>
    </div>


    {% if products|length > 6 %}
        <div id="loadMore" style="">
            <a class="btn btn-outline-primary" href="#">Load More</a>
        </div>
    {% endif %}

    <!-- Este modal es el que nos servira para enviar un mail -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



