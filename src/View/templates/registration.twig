{% extends "base.twig" %}


{% block styles %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/styles.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

{% endblock %}

{% block scripts %}
    <script src="https://code.jquery.com/jquery-3.4.0.js" integrity="sha256-DYZMCC8HTC+QDr5QNaIcfR7VSPtcISykd+6eSmBW5qo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.1/jquery.validate.min.js" ></script>
    <script src="http://jqueryvalidation.org/files/dist/additional-methods.min.js"></script>

    <script src="../assets/js/reg.js"></script>

{% endblock %}

{% block header %}
     <h1>PWPOP</h1>
 {% endblock %}

{% block content %}
    <h1 class="form_title">Registration form</h1>
    <form id="form" class="form_content" action="" method="POST" enctype="multipart/form-data">
        Name:<br>
        <input type="text" name="name"><br>
        Username:<br>
        <input type="text" name="username"><br>
        Email:<br>
        <input type="email" name="email"><br>
        Birthdate:<br>
        <input type="date" name="birthdate"><br>
        Phone number:<br>
        <input type="tel" name="phone_number"><br>
        Password:<br>
        <input type="password" name="password"><br>
        Confirm password:<br>
        <input type="password" name="c_password"><br>
        Profile image:<br>
        <input type="file" name="profile_image"><br>
        <br>
        <button type="submit" class="btn btn-outline-primary">Register</button><br>
    </form>


{% endblock %}

{% block footer %}
    Copyright {{"now"|date('Y')}}
{% endblock %}